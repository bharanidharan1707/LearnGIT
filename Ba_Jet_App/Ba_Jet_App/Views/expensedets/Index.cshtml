@model IEnumerable<Ba_Jet_App.expensedet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Category")
        </th>
        <th>
            @Html.DisplayName("Spent On")
        </th>
        <th>
            @Html.DisplayName("Amount")
        </th>
        <th>
            @Html.DisplayName("Spent By")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.exp_Catg)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.exp_for)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.exp_amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.shareholder.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.exp_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.exp_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.exp_id })
        </td>
    </tr>
}

</table>
